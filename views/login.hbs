<div class="main-container">
    <div class="center-block login-signup">
        <h1>Login</h1>
        <form>
            <div>
                <label for="username">Username</label>
                <br>
                <input type="text" id="username-login">
            </div>
            <br>
            <div>
                <label for="password">Password</label>
                <br>
                <input type="password" id="password-login">
            </div>
            <br>
            <button class="button center-block" id="login-button">Log In</button>
        </form>
        <a href="/signup">
            <p class="center-block vp">Sign up instead</p>
        </a>
    </div>
</div>

<script src="/js/login.js"></script>