<div class="main-container">
    <div id="back-button-container">
        <a href="/dashboard" class="back-button"><i class="fas fa-chevron-left"></i> Back </a>
        <div class="edit-container">
            <div class="edit-buttons-container">
                <div>
                    <button id="confirm-edit">CONFIRM EDIT</button>
                </div>
                <div>
                    <button id="confirm-delete">DELETE</button>
                </div>
            </div>
        </div>
    </div>

    <p>
        Click to edit post:
    </p>
    <div class="container" id="singlepost-container" data-id="{{post.id}}">
        <form>
            <div>
                <br>
                <input id="singlepost-title" type="text" placeholder="{{post.title}}">
            </div>
            <div>
                <textarea name="singlepost-body" id="singlepost-body" cols="30" rows="10"
                    placeholder="{{post.body}}"></textarea>
            </div>
        </form>
    </div>

    <div class="container singlepost-comments">
        <h2>Comments:</h2>
        <ul>
            {{#each post.comments}}
            <li><i class="fas fa-user-circle"></i> {{this.user.name}}: {{this.body}}</li>
            {{/each}}
        </ul>
    </div>
</div>

<script src="/js/singlePost.js"></script>